{
  "name": "my-thrifting-buddy",
  "version": "1.0.0",
  "description": "AI-powered secondhand item price scanner",
  "scripts": {
    "backend:start": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "mobile:start": "cd mobile-app && npm start",
    "mobile:android": "cd mobile-app && npm run android",
    "mobile:ios": "cd mobile-app && npm run ios",
    "install:all": "npm install && cd backend && npm install && cd ../mobile-app && npm install",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\"",
    "test:backend": "cd backend && npm test",
    "clean": "rm -rf node_modules backend/node_modules mobile-app/node_modules"
  },
  "keywords": [
    "thrifting",
    "price-scanner",
    "ai",
    "react-native",
    "nodejs",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "prettier": "^3.1.1"
  }
}