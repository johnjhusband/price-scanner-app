# Environment Configuration Example
# Copy this to .env.staging or .env.production and fill in values

# Server Configuration
NODE_ENV=production
SERVER_IP=your.server.ip
DOMAIN=yourdomain.com

# Database
DB_PASSWORD=strong_password_here
DATABASE_URL=postgresql://thriftingbuddy:strong_password_here@localhost:5432/thrifting_buddy

# Redis
REDIS_PASSWORD=redis_password_here
REDIS_URL=redis://:redis_password_here@localhost:6379

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=generate_32_char_secret_here
JWT_REFRESH_SECRET=generate_different_32_char_secret_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=thrifting-buddy-images
AWS_REGION=us-east-1

# Optional Services
SENTRY_DSN=your_sentry_dsn
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_zone_id
SLACK_WEBHOOK=your_slack_webhook

# Docker Options
USE_DOCKER=false
BUILD_MOBILE=false